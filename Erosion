import cv2
import numpy as np
import matplotlib.pyplot as plt

# Load the image in grayscale
img = cv2.imread('F.png', 0)  # Use your correct filename
_, binary = cv2.threshold(img, 127, 255, cv2.THRESH_BINARY)

# Create a bigger structuring element
kernel = np.ones((5, 5), np.uint8)  # Increased size from (3,3) to (9,9)

# Apply erosion with more iterations
eroded = cv2.erode(binary, kernel, iterations=3)

# Display original and eroded images
plt.subplot(1, 2, 1)
plt.imshow(binary, cmap='gray')
plt.title("Original Binary")
plt.axis("off")

plt.subplot(1, 2, 2)
plt.imshow(eroded, cmap='gray')
plt.title("Eroded")
plt.axis("off")

plt.tight_layout()
plt.show()
